    <mj-container width="640px" background-color="#FAFAFA">

      <!-- Header1 -->
      <mj-section padding-bottom="12px" padding-top="12px">
        <mj-column width="100%">
          <mj-image align="left" src="https://s3.eu-central-1.amazonaws.com/springpics/springer_logo_highres.png"  width="125px"/>
        </mj-column>
      </mj-section>

    <mj-wrapper border="1px solid #DCDCDC" padding-bottom="0px" padding-top="0px">

      <!-- Intro -->
      <mj-section padding="25px" background-color="#FFFFFF">
        <mj-column width="100%">
          <mj-text align="left" padding-left="0px" font-size="26px" color="#333333" font-weight="normal" line-height="34px" font-family="Georgia, serif">
             Dear Dr. Goldrei,
          </mj-text>
          <mj-text align="left" padding-left="0px" font-size="16px" line-height="24px" color="#666666" font-family="Arial, Helvetica, sans-serif">
          We've been tracking chapter downloads for your eBook and are pleased to let you know that it has outperformed the discipline average in Mathematics and Statistics.
          </mj-text>
        </mj-column>
      </mj-section>

      <!-- Book & metrix Section -->

      <!-- Bookmetrix part 1 -->
      <!--mj-section background-color="#F0F0F0" padding-top="25px" padding-bottom="0px">
        <mj-column>
