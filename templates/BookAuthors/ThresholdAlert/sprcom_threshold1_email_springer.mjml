        </mj-column>

        <mj-column width="40%" background-color="#E8E8E8">
          <mj-image padding-left="0px" padding-top="20px" src="https://s3.eu-central-1.amazonaws.com/springpics/alert_illu_spr.png" width="60px">
          </mj-image>
          <mj-text padding-left="0px" padding-top="0px" padding-bottom="0px" align="center" color="#666666" line-height="22px" font-size="13px" font-family="Arial, Helvetica, sans-serif">Downloads</mj-text>
          <mj-text padding-left="0px" padding-top="0px" padding-bottom="14px" color="#71AB0B" font-size="24px" line-height="28px" font-family="Arial, Helvetica, sans-serif" align="center">5951</mj-text>
        </mj-column>

      </mj-group>


        <mj-column width="50%">
