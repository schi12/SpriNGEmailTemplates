<mjml>
  <mj-head>
     <mj-font name="Encode Sans" href="https://fonts.googleapis.com/css?family=Encode+Sans" />
     <mj-font name="Encode Sans Condensed" href="https://fonts.googleapis.com/css?family=Encode+Sans+Condensed:600" />
   </mj-head>
  <mj-body>
    <mj-container width="640px" background-color="#F7F7F7">

    <mj-wrapper padding-bottom="0px" padding-top="0px">

      <!-- Header1 -->
      <mj-section padding-bottom="0px" padding-top="0px">
        
      
        <mj-column width="100%" background-color="#333333">
          <mj-image padding-top="20px" padding-bottom="20px" padding-left="30px" align="left" src="https://s3.eu-central-1.amazonaws.com/springpics/apress_logo.png"  width="110px" padding-top="0" padding-bottom="0" />
          
        </mj-column>
        
      </mj-section>
      
      

      <!-- Intro -->
      <mj-section background-color="white" padding-bottom="0px" padding-top="30px" padding-left="30px" padding-right="30px">
        
        <mj-column width="100%">
          <mj-text align="left" padding-left="0px" font-size="24px" font-weight="600" color="#333333" line-height="22px" font-family="Encode Sans Condensed,Helvetica Neue,​Helvetica,Arial,​sans-serif">
             Welcome,
          </mj-text>
          <mj-text align="left" padding-left="0px" font-size="14px" line-height="22px" color="#555555" font-family="Encode Sans,Helvetica Neue,​Helvetica,Arial,​sans-serif">
             You successfully subscribed to the Apress Newsletter. You will stay up to date on
             daily deals, discount promotions, events and new releases in the following categories:
          </mj-text>
      
        </mj-column>
        
      </mj-section>

      <!-- Subscription List -->
      <mj-section background-color="white" padding-left="30px" padding-right="30px" padding-top="0px">
        
        <mj-column width="50%">
           <mj-text align="left" font-size="14px" color="#555555" line-height="32px" font-family="Encode Sans,Helvetica Neue,​Helvetica,Arial,​sans-serif" padding="0px" >
             <ul>
             <li>
              Apple & iOS
             </li>
             <li>
              Hardware & Maker
             </li>
             <li>
              Big Data & Analysis
             </li>
             <li>
              Enterprise Software
             </li>
             <li>
              Cloud Computing
             </li>
             </ul>
          </mj-text>
      
          
        </mj-column>
        <mj-column width="50%">
          <mj-text align="left" font-size="14px" color="#555555" line-height="32px" font-family="Encode Sans,Helvetica Neue,​Helvetica,Arial,​sans-serif" padding="0px" >
             <ul>
             <li>
              Apple & iOS
             </li>
             <li>
              Hardware & Maker
             </li>
             <li>
              Big Data & Analysis
             </li>
             <li>
              Enterprise Software
             </li>
             <li>
              Cloud Computing
             </li>
             </ul>
          </mj-text>
        </mj-column>
        
      </mj-section>


      <!-- Account Information -->

      <mj-section background-color="white"  padding-left="30px" padding-right="30px" padding-top="0px" padding-bottom="0px">
        <mj-column width="100%" background-color="#e6e6e6">
          <mj-text font-size="18px" color="#333333" line-height="22px" font-weight="600" padding-left="30px" padding-top="30px" font-family="Encode Sans Condensed,Georgia,Helvetica Neue,Arial">
            Your account information
          </mj-text>
          <mj-text font-size="14px" color="#555555" line-height="22px" padding-left="30px" font-family="Encode Sans,Georgia,Helvetica Neue,Arial">
            You'll receive emails in html format to the following mail address:
            jane.doe@blindspot.com
          </mj-text>
          <mj-button font-family="Encode Sans,Georgia,Helvetica Neue,Arial" line-height="17px" padding-left="30px" padding-bottom="30px" font-size="14px" background-color="#333333" border-radius="22px" color="#F7F7F7" align="left" href="https://login.apress.com/public/en/resetpassword?url=https://www.apress.com/gp/">
            Activate your account now
          </mj-button>
        </mj-column>


      </mj-section>


      <!-- Coupon Apress -->

      <mj-section background-color="white" padding-left="30px" padding-right="30px" padding-top="30px" padding-bottom="30px">
        <mj-column width="100%" background-color="#FFC63E">
          <mj-text font-size="18px" color="#333333" line-height="22px" font-weight="600" padding-left="30px" padding-top="30px" font-family="Encode Sans Condensed,Georgia,Helvetica Neue,Arial">
            <b>Your 10% Apress Gift Card </b>
          </mj-text>
          <mj-text font-size="14px" color="#555555" line-height="22px" padding-left="30px" font-family="Encode Sans,Georgia,Helvetica Neue,Arial">
            Discover the vast selection of over 2,700 IT titles in our Apress Shop and get 10% discount
            on your next eBook purchase until the end of the year.
          </mj-text>
           <mj-button font-family="Encode Sans,Georgia,Helvetica Neue,Arial" line-height="17px" padding-left="30px" padding-bottom="30px" font-size="14px" background-color="#333333" border-radius="22px" color="#F7F7F7" align="left" href="https://www.apress.com/gp/">
            Redeem your 10% Gift Card now
          </mj-button>
        </mj-column>


      </mj-section>

     

      
      <!--Footer Palgrave-->
